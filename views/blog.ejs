<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <title><%= blog.title %> | Blogster</title>
  <style>
    .blog-cover {
      width: 100%;
      height: 400px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .blog-title {
      font-size: 2.5rem;
      font-weight: bold;
    }

    .blog-meta {
      color: #666;
      margin-bottom: 30px;
    }

    .blog-body {
      font-size: 1.2rem;
      line-height: 1.8;
    }

    .comment-section {
      margin-top: 60px;
    }

    .comment-form textarea {
      resize: vertical;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav.ejs') %>

  <div class="container mt-5">
    <img src="/uploads/blog/<%= blog.coverImageURL ? blog.coverImageURL : 'default-blog.jpg' %>" alt="Cover Image" class="blog-cover">

    <h1 class="blog-title"><%= blog.title %></h1>
    <p class="blog-meta">
      By <strong><%= blog.createdBy?.username || 'Unknown Author' %></strong> |
      <%= blog.createdAt.toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %>
    </p>

    <div class="blog-body">
      <%= blog.body.replace(/\n/g, '<br>') %>
    </div>

    <div class="comment-section">
      <h3 class="mt-5 mb-4">Comments</h3>

      <!-- Comment Form -->
      <form action="/blog/comment/<%= blog._id %>" method="POST" class="comment-form mb-4">
        <div class="mb-3">
          <label for="comment" class="form-label">Leave a comment</label>
          <textarea class="form-control" id="comment" name="content" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </form>

      <!-- Comments List -->
      <div class="comments-list">
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(comment => { %>
            <div class="mb-3 border-bottom pb-2">
              <strong><%= comment.createdBy ? comment.createdBy.username : 'Anonymous' %></strong>
              <p><%= comment.content %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">No comments yet. Be the first to comment!</p>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('./partials/script.ejs') %>
</body>
</html>
